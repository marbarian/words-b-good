@model IEnumerable<WordsBGood.Domain.Entities.Category>

@{
    ViewBag.Title = "EditCatsMain";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Categories</h2>

<table class ="Grid">
    <tr>
        <th>User</th>
        <th>Subject</th>
        <th></th>
    </tr>
@foreach (var item in Model) 
{
    <tr>
        <td>@item.User.Name</td>
        <td> @Html.ActionLink(item.Subject, "EditCats", "Admin", new { item.CategoryId}, null)</td>
        <td>
            @using (Html.BeginForm("DeleteCat", "Admin"))
            {
                @Html.Hidden("categoryId", item.CategoryId)
                <input type="submit" value="Delete" />
            }
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Add a new Category", "CreateCat", "Admin")</p>
