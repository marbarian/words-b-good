@model WordsBGood.Models.CatVocab
@{
    ViewBag.Title = "AddVocab";
}

<h2>AddVocab to @Model.Category.Subject</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
        {
            <p>Enter Word: @Html.TextBoxFor(x => x.Vocab.Word)</p>
            <p>Enter Definition: @Html.TextBoxFor(x => x.Vocab.Definition)</p>
            <p>Optional Fields</p>
            <p>Enter Part of Speech (n, adj, v, etc): @Html.TextBoxFor(x => x.Vocab.Type)</p>
            <p>Enter a link for etymology source: @Html.TextBoxFor(x => x.Vocab.EtyLink)</p>
            @Html.HiddenFor(x =>x.Category.CategoryId)
            @Html.HiddenFor(x => x.Category.Subject)                 
            <input type ="submit" value ="Add Word" />
        }